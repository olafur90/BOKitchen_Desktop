<ui:FluentWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialIcons="clr-namespace:Material.Icons;assembly=Material.Icons"
        xmlns:local="clr-namespace:MathollDesktopApplication"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Name="mainWindow" x:Class="MathollDesktopApplication.MainWindow"
        mc:Ignorable="d"
        Title="BÓ Kitchen" Height="800" Width="1600" MinWidth="800" MinHeight="400">
    <Window.Resources>
        <ResourceDictionary Source="pack://application:,,,/Resources/ButtonStyles.xaml"/>
    </Window.Resources>
    <Grid x:Name="GridMainArea">
        <Grid Height="147" VerticalAlignment="Top" Background="Black" MouseDown="Grid_MouseDown" Panel.ZIndex="1">
            <Image VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0" Source="/bola_logo.png"/>
            <ui:Button x:Name="BtnCloseApplication" Content="X" VerticalAlignment="Top" HorizontalAlignment="Right" Background="Red" FontSize="48" FontFamily="Arial Black" Height="50" Width="50" Margin="0,0,2,0" Click="BtnCloseApplication_Click"/>
            <ui:Button x:Name="btn_close_application_Copy" Content="O" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,57,0" Background="#FF61A6DC" FontSize="48" FontFamily="Arial Black" Height="50" Width="50"/>
            <ui:Button Content="_" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,112,0" Background="#FF61A6DC" FontSize="150" FontFamily="Bauhaus 93" Height="50" Width="50"/>
            <Rectangle HorizontalAlignment="Left" Height="52" Margin="1435,0,0,0" Stroke="Black" VerticalAlignment="Top" Width="165" Fill="#FF353535" Panel.ZIndex="-1"/>
            <Button Content="U" Margin="1540,95,0,0" Background="Gray" VerticalAlignment="Top" Height="42" Width="50"/>
        </Grid>
        <Grid Width="210" HorizontalAlignment="Left" Background="Black" Panel.ZIndex="0" >
            <Button Content="Allar Uppskriftir" FontWeight="Bold" FontSize="32" HorizontalAlignment="Stretch" Height="70" Opacity="0.92" Margin="0,168,0,0" VerticalAlignment="Top" Background="#FF21441C">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0" CornerRadius="0">
                            <ContentPresenter x:Name="contentPresenter" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="LightGreen" />
                                <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="Blue" />
                                <Setter TargetName="contentPresenter" Property="TextElement.FontWeight" Value="Bold" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="DarkGreen" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="Gray" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Content="Button" HorizontalAlignment="Stretch" Height="70" Opacity="0.92" Margin="0,238,0,0" VerticalAlignment="Top" Background="#FF21441C">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0" CornerRadius="0">
                            <ContentPresenter x:Name="contentPresenter" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="LightGreen" />
                                <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="Blue" />
                                <Setter TargetName="contentPresenter" Property="TextElement.FontWeight" Value="Bold" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="DarkGreen" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="Gray" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Content="Button" HorizontalAlignment="Stretch" Height="70" Opacity="0.92" Margin="0,308,0,0" VerticalAlignment="Top" Background="#FF21441C">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0" CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="LightGreen" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="DarkGreen" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="Gray" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Content="Button" HorizontalAlignment="Stretch" Height="70" Opacity="0.92" Margin="0,378,0,0" VerticalAlignment="Top" Background="#FF21441C">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0" CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="LightGreen" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="DarkGreen" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="Gray" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="228,157,18,12" RenderTransformOrigin="0.5,0.5">
            <ScrollViewer.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.134"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.748"/>
                </TransformGroup>
            </ScrollViewer.RenderTransform>
            <Grid x:Name="GridRecipeButtons" />
        </ScrollViewer>
    </Grid>
</ui:FluentWindow>
